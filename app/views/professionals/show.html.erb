<!-- //breadcrumbs -->
  <div class="products">
    <div class="container">
      <div class="agileinfo_single">

        <div class="col-md-4 agileinfo_single_left">
          <center>
            <%= image_tag("#{@professional.id}.png", alt: @professional.name, title: @professional.name, id: "example", class: "img-responsive") %>
          </center>
        </div>
        <div class="stars">
          <i class="fa fa-star blue-star" aria-hidden="true"></i>
          <i class="fa fa-star blue-star" aria-hidden="true"></i>
          <i class="fa fa-star blue-star" aria-hidden="true"></i>
          <% if rand(2) == 1 %>
            <i class="fa fa-star blue-star" aria-hidden="true"></i>
          <% else %>
            <i class="fa fa-star gray-star" aria-hidden="true"></i>
          <% end %>

          <i class="fa fa-star gray-star" aria-hidden="true"></i>
        </div>

        <div class="col-md-8 agileinfo_single_right">
        <h2><%=@professional.name %></h2>
        <h4><%=@professional.role %></h2>

          <div class="w3agile_description">
            <h4>Descrição:</h4>
            <p><%=@professional.description %> </p>
          </div>
          <div class="snipcart-item block">
            <div class="snipcart-thumb agileinfo_single_right_snipcart">
              <h4 class="m-sing"><%=@professional.role %></h4>
            </div>
            <div class="snipcart-details agileinfo_single_right_details">
              <form action="#" method="post">
                <fieldset>
                  <input type="hidden" name="item_id" value="<%=@professional.id %>">
                  <input type="submit" name="submit" value="Solicitar" class="button">
                </fieldset>
              </form>
            </div>
          </div>
        </div>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
<%= render 'ecommerce/news', '@advertised_professionals': @new_professionals %>